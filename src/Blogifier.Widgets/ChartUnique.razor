<div class="card h-100">
    <div class="card-header">
        @Localizer["unique-hits", true]
    </div>
    <div class="card-body chart-card">
        <div class="input-group">
            <select @bind="SelectedChartOptionUnique">
                @if (ChartOptionUnique != null)
                {
                    @foreach (var item in ChartOptionUnique)
                    {
                        <option value="@item.Id">@item.Label</option>
                    }
                }
            </select>
        </div>

        @if (SelectedChartOptionUnique == ChartSelectorUnique.Week)
        {
            <Chart Type="ChartType.Bar" Labels="@Labels">
                <Series Values="@Values" />
            </Chart>
        }
        else
        {
            <Chart Type="ChartType.Line" Labels="@Labels">
                <Series Values="@Values" />
            </Chart>
        }
    </div>
</div>
