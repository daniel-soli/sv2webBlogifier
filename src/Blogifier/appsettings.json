{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Blogifier": {
    "DbProvider": "MySql",
    "ConnString": "Server=<ip>;Port=<port>;Database=<db>;Uid=<username>;Pwd=<Password>;",
    "Avatar": "admin/img/avatar.png",

    "SendGridApiKey": "YOUR-SENDGRID-API-KEY",
    "SendGridEmailFrom": "admin@blog.com",
    "SendGridEmailFromName": "Blog admin"
  },
  "FeatureManagement": {
    "Demo": false,
    "Email": {
      "EnabledFor": [
        {
          "Name": "EmailFilter"
        }
      ]
    },
    "GenerateThumbs": true
  }
}
