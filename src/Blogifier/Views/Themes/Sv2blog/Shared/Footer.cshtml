@using Askmethat.Aspnet.JsonLocalizer.Localizer
@inject IJsonStringLocalizer<ListModel> Localizer
@{
    string about = Model.About;
    List<SocialField> socialField = Model.SocialFields;
    var bday = new DateTime(1987,10,17);
    var today = DateTime.Today;
    var age = today.Year - bday.Year;
    if (bday.Date > today.AddYears(-age)) age--;
}
<div class="modal fade blog-search" id="blog-search" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <form role="search" asp-controller="Blog" asp-action="Search" method="post">
                    <input type="search" id="term" name="term" class="form-control form-control-lg" placeholder="@Localizer["search"]" autocomplete="off">
                </form>
            </div>
        </div>
    </div>
</div>
<!--About/contact-->
<section>
    <div class="container-fluid white mb-0 pb-0">
        <hr class="mt-0">
        <div class="container">
            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <div class="col-lg-4 col-md-12">
                    <h6 class="font-weight-bold mt-5 mb-3">@Localizer["about"] Sv2web</h6>
                    <hr class="mb-5">
                    @*<img src="" alt="sample image" class="img-fluid z-depth-1">*@
                    <p class="mt-4 mb-5">
                        @about
                    </p>
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-lg-4 col-md-6">
                    <h6 class="font-weight-bold mt-5 mb-3">Daniel Soli Stensvik</h6>
                    <hr class="mb-5">
                    <div class="row mt-4">
                        <div class="col-12">
                            <p class="mb-1 font-weight-bold">
                                @age.ToString() år gammel
                                <br />
                                Gift
                                <br />
                                2 hunder
                            </p>
                        </div>
                    </div>
                </div>
                <!--Grid column-->
                <div class="col-lg-4 col-md-6">
                    <h6 class="font-weight-bold mt-5 mb-3">@Localizer["contact"]</h6>
                    <hr class="mb-5">
                    <p class="mt-4 mb-5">
                       Vil du komme i kontakt, så er det bare å benytte en av SoMe linkene.
                    </p>
                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->

        </div>
    </div>

</section>
<!--/ About/contact-->
<!--Main layout-->
<!--Footer-->
<footer class="page-footer stylish-color mt-0 pt-0 text-center text-md-left">

    <!--Footer Links-->
    <div class="container">

        <!--First row-->
        <div class="row">

            <!--First column-->
            <div class="col-md-12 py-4">

                <div class="footer-socials mb-5 flex-center">

                    @foreach (var item in socialField)
                    {
                        string Icon = item.Icon;
                        if (Icon == "fa-facebook")
                        {
                            <a class="fb-ic" href="@item.Content">
                                <i class="fab @Icon-f fa-lg white-text mr-md-5 mr-3 fa-lg"> </i>
                            </a>
                        }
                        else if (Icon == "fa-linkedin")
                        {
                            <a class="li-ic" href="@item.Content">
                                <i class="fab @Icon-in fa-lg white-text mr-md-5 mr-3 fa-lg"> </i>
                            </a>
                        }
                        else
                        {
                            <a class="fb-ic" href="@item.Content">
                                <i class="fab @Icon fa-lg white-text mr-md-5 mr-3 fa-lg"> </i>
                            </a>
                        }
                    }
                </div>
            </div>
            <!--/First column-->
        </div>
        <!--/First row-->
    </div>
    <!--/Footer Links-->
    <!--Copyright-->
    <div class="footer-copyright text-center py-3">
        <div class="container-fluid">
            Copyright © @DateTime.Now.Year Sv2web. Drevet av <a href="https://github.com/blogifierdotnet/Blogifier" data-toggle="tooltip" target="_blank" title="Version - @AppSettings.Version">Blogifier</a>.
        </div>
    </div>
    <!--/Copyright-->

</footer>
<!--/Footer-->
<script src="~/themes/sv2blog/js/jquery-3.5.1.min.js"></script>
<script src="~/themes/sv2blog/js/bootstrap.min.js"></script>
<script src="~/themes/sv2blog/js/main.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.4.4/umd/popper.min.js"></script>
<script>
    $(function (e) {
        e(window).on("scroll", function () {
            var t = e(".navbar");
            t.length && (t.offset().top > 50 ? e(".scrolling-navbar").addClass("top-nav-collapse") : e(".scrolling-navbar").removeClass("top-nav-collapse"))
        })
    });
</script>
